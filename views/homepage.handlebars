<!-- Loop over each object in the posts array -->
{{#each posts as |post|}}
<div class="row mb-4 post">
  <h2>{{post.title}}</h2>
  <p>Created by {{post.user.username}} on {{format_date post.date_created}}</p>
  <p>{{post.content}}</p>
  <p>{{post.comment}}</p>

  <form class="form comment-form">
    <div class="form-group">
      <label for="comment">comment:</label>
      <input class="form-input" type="text" id="comments"/>
    </div>
    <div class="form-group">
        <button class="btn btn-primary" type="submit">Add Comment</button>
    </div>
  </form>  
</div>
{{/each}}

